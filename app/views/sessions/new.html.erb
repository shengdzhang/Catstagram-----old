<h1> Sign In! </h1>

<form action="<%= users_url %>" method="post">
  <%= auth_token %>

  <label> Username/Email </label>
  <br/>
  <input type="text" name="user[username]" value="Enter your username/email"/>
  <br/>

  <label> Password </label>
  <br/>
  <input type="password" name="user[password]" value="Enter password"/>
  <br/>
  <br/>

  <input type="submit" value="Sign In"/>

</form>

<br/>

<div class="signup-message">
Need a new account? <a href= "<%= new_user_url%>" > Sign Up </a>
</div>
