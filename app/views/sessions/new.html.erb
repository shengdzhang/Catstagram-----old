<div class="formwrap">
  <h1> Sign In! </h1>
  <br/>
  <br/>

  <form action="<%= session_url %>" method="post">
    <%= auth_token %>

    <label class="signing"> Username </label>
    <br/>
    <input class="signing" type="text" name="user[username]" value=""/>
    <br/>
    <br/>
    <label class="signing"> Password </label>
    <br/>
    <input class="signing" type="password" name="user[password]" value=""/>
    <br/>
    <br/>

    <input class="button" type="submit" value="Sign In"/>

  </form>

  <br/>

  <div id="signup-message">
  Need a new account? <a href= "<%= new_user_url%>" > Sign Up </a>
  </div>
  <div id="guest-message">
  Or use a <a href="<%= session_url %>"> Guest </a> account.
  </div>
</div>
