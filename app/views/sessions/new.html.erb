<div class="formwrap">
  <h1> Sign In! </h1>

  <form action="<%= users_url %>" method="post">
    <%= auth_token %>

    <label class="signing"> Username/Email </label>
    <br/>
    <input class="signing" type="text" name="user[username]" value="Enter your username"/>
    <br/>
    <br/>
    <label class="signing"> Password </label>
    <br/>
    <input class="signing" type="password" name="user[password]" value=""/>
    <br/>
    <br/>

    <input class="button" type="submit" value="Sign In"/>

  </form>

  <br/>

  <div id="signup-message">
  Need a new account? <a href= "<%= new_user_url%>" > Sign Up </a>
  </div>
</div>
